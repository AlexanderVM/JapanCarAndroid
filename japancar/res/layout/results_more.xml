<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <Gallery
        android:id="@+id/gallery1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_part"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loc_part"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_part"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frame_part"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/engine_part"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cond_part"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addit_part"/>
    </LinearLayout>
    <LinearLayout
           android:paddingLeft="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical" >
    <TextView 
        android:id="@+id/part_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name_part"/>
    <TextView 
        android:id="@+id/part_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loc_part"/>
    <TextView 
        android:id="@+id/part_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_part"/>
    <TextView 
        android:id="@+id/part_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frame_part"/>
    <TextView 
        android:id="@+id/part_engine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/engine_part"/>
    <TextView 
        android:id="@+id/part_cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cond_part"/>
    <TextView
        android:id="@+id/part_addit" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/addit_part"/>
                        
    </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
           android:paddingTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"/>
    <TextView
        android:paddingLeft="10dp" 
        android:id="@+id/price_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price"/>
    </LinearLayout>
    
    
    <LinearLayout
           android:paddingTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal" >
    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical" >
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seller"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sellers_loc"/>
    </LinearLayout>
    <LinearLayout
           android:paddingLeft="10dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical" >
    <TextView 
        android:id="@+id/part_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seller"/>
    <TextView 
        android:id="@+id/part_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"/>

    <TextView 
        android:id="@+id/part_seller_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sellers_loc"/>
    
    </LinearLayout>
</LinearLayout>

    
</LinearLayout>